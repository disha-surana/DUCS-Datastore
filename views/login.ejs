<%- include ("partials/header") %>

<div class="container " style="margin: 20px auto;">
    <div clas="row">
        <h1 style="text-align:center">Login!</h1>
        <div style="width: 30%; margin:30px auto;">
            <form action="/login" method="POST">
                <div class="form-group">
                        <label for="username">Username</label>
                        <input class="form-control" type="text" id= "username" name="username" placeholder="username" style="text-transform: capitalize">
                </div>
                <div class="form-group">
                        <label for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" placeholder="password" >
                </div>
                <div class="form-group">
                        <button type="submit" value="Login!" class="btn btn-primary form-control" onclick="userCapitalize();">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript" src="/JS/validateUser.js"></script>

<%- include ("partials/footer") %>